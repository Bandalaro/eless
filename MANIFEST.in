# Package source
include LICENSE
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include pyproject.toml
include requirements.txt
include setup.py

# Documentation
include STORAGE_CONFIG.md
include USER_CONFIGURABILITY_ANALYSIS.md
include IMPROVEMENTS_SUMMARY.md
include PUBLISHING.md

# Configuration files
recursive-include config *.yaml
recursive-include config *.yml
recursive-include config *.json

# Package data
graft src/core/templates
graft src/core/schemas

# Exclude test and development files
prune tests
prune docs
prune deploy_env
prune scripts
prune .git
prune .github
prune .vscode
prune .idea
prune *.egg-info
prune __pycache__
prune .pytest_cache
prune .coverage

# Exclude misc files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude *.so
global-exclude *~
global-exclude .git*
global-exclude .*.sw*
global-exclude *.log

